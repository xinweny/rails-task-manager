<%= form_for @task do |f| %>
    <div class =”form-group”>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>

    <div class =”form-group”>
        <%= f.label :details %>
        <%= f.text_field :details %>
    </div>

    <% unless @task.new_record? %>
      <div class =”form-group”>
        <%= f.label :completed %>
        <%= f.check_box :completed, {}, true, false %>
      </div>
    <% end %>

    <%= f.submit %>
<% end %>
